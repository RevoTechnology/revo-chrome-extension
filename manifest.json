{
  "manifest_version": 2,

  "name": "Revo",
  "description": "This extension will help you to use Revo",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://*.ozon.ru/context/cart/"
  ],
  "content_scripts": [{
    "css": ["context_popup.css"],
    "js": ["context_popup.js"],
    "matches": ["https://*.ozon.ru/context/cart/*"]
  }]
}
